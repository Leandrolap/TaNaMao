<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="QrApp_gerador.PopupCriaQr"
               xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Color="#131313"
               NavigationPage.HasNavigationBar="False">

    <Grid HeightRequest="550" WidthRequest="400" Margin="25">

       
        
        <VerticalStackLayout VerticalOptions="CenterAndExpand">

            <Button x:Name="CounterBtn"
                    Text="Fechar"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="15"
                    Clicked="OnClickFechar"
                    Margin="0,0,50,0"
                    FontAttributes="Bold"
                    HorizontalOptions="EndAndExpand"/>
            
            <Frame Padding="10" CornerRadius="30" Margin="50">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="LblTitulo"
                           HorizontalOptions="Center" 
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontSize="22"
                           FontFamily="MairyRegular"/>

                    <zxing:BarcodeGeneratorView x:Name="ImgQr"
                                                HeightRequest="250"
                                                WidthRequest="250"
                                                ForegroundColor="Black"
                                                Format="QrCode"
                                                Margin="3" />

                    <Label Text="FaÃ§a um print para salvar este QrCode"
                           HorizontalOptions="Center" 
                           TextColor="Black"
                           FontSize="9"
                           FontFamily="MairyExtralight"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</toolkit:Popup>